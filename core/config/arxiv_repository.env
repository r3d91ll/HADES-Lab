# ARXIV_REPOSITORY Database Credentials (template)
# Copy this file to a secure location (e.g. core/config/arxiv_repository.local.env)
# and populate the password values out-of-band. Do not commit real credentials.

export ARXIV_DB_NAME=arxiv_repository

# Preferred socket locations managed by systemd
export ARANGO_RO_SOCKET=/run/hades/readonly/arangod.sock
export ARANGO_RW_SOCKET=/run/hades/readwrite/arangod.sock
# Optional fallback HTTP endpoint (used only for diagnostics)
export ARANGO_HTTP_BASE_URL=http://localhost:8529

export ARXIV_ADMIN_USER=arxiv_admin
export ARXIV_WRITER_USER=arxiv_writer
export ARXIV_READER_USER=arxiv_reader

export ARXIV_ADMIN_PASSWORD=
export ARXIV_WRITER_PASSWORD=
export ARXIV_READER_PASSWORD=

# Load credentials at runtime via environment variables or systemd drop-ins.
# Example: export ARXIV_ADMIN_PASSWORD="$(pass show hades/arango/admin)"
