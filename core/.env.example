# HADES Processors Environment Configuration
# Copy this to .env and fill in your values

# =========================
# Database Configuration
# =========================
# Using ARANGO_ prefix for compatibility with existing scripts
ARANGO_HOST=192.168.1.69
ARANGO_PORT=8529
ARANGO_USERNAME=root
ARANGO_PASSWORD=your_password_here
ARANGO_DATABASE=academy_store

# Alternative: Use HADES_ prefix (takes priority if both are set)
# HADES_DB_HOST=192.168.1.69
# HADES_DB_PORT=8529
# HADES_DB_USERNAME=root
# HADES_DB_PASSWORD=your_password_here
# HADES_DB_NAME=academy_store

# =========================
# Processor Configuration
# =========================
# Override default chunk sizes
# HADES_CHUNK_SIZE=1024
# HADES_CHUNK_OVERLAP=128
# HADES_EMBEDDING_BATCH_SIZE=10

# ArXiv-specific overrides
# ARXIV_CHUNK_SIZE=4000
# ARXIV_CHUNK_OVERLAP=1000
# ARXIV_PDF_OUTPUT_DIR=/tmp/arxiv_pdfs

# GitHub-specific overrides
# GITHUB_CHUNK_SIZE=1024
# GITHUB_CHUNK_OVERLAP=128
# GITHUB_CLONE_TIMEOUT=300

# =========================
# Logging Configuration
# =========================
HADES_LOG_LEVEL=INFO
HADES_METRICS_ENABLED=true

# Log file settings
# HADES_LOG_MAX_BYTES=10485760
# HADES_LOG_BACKUP_COUNT=5

# =========================
# GPU Configuration
# =========================
CUDA_VISIBLE_DEVICES=1
USE_GPU=true
USE_FP16=true

# =========================
# Processing Options
# =========================
# Force reprocessing even if already exists
# FORCE_REPROCESS=false

# Validate embeddings after generation
# VALIDATE_EMBEDDINGS=true

# =========================
# Paths
# =========================
# Where to store temporary files
# TEMP_DIR=/tmp

# Where to store PDFs
# PDF_STORAGE_DIR=/tmp/arxiv_pdfs

# =========================
# API Keys (if needed)
# =========================
# GITHUB_TOKEN=your_github_token_here
# ARXIV_API_KEY=your_arxiv_key_here

# =========================
# Debug Options
# =========================
# Enable debug logging
# DEBUG=false

# Enable verbose output
# VERBOSE=false

# Save intermediate results
# SAVE_INTERMEDIATE=false